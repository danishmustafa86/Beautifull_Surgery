# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/healthtech_db
# Alternative for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/healthtech_db?retryWrites=true&w=majority

# Database Name
DB_NAME=healthtech_db

# Server Configuration
PORT=8000
HOST=localhost

# Environment
NODE_ENV=development

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Security
SECRET_KEY=your-super-secret-key-here-change-this-in-production
JWT_SECRET=your-jwt-secret-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# External APIs (if needed)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
EXTERNAL_API_URL=https://api.example.com
EXTERNAL_API_KEY=your-external-api-key

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads/

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Monitoring
SENTRY_DSN=your-sentry-dsn-here

# Development Tools
DEBUG=true
ENABLE_SWAGGER=true